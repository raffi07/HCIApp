<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoadPhoto">

    <ImageView
        android:id="@+id/documentSVG"
        android:layout_width="262dp"
        android:layout_height="251dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loadQRHeader"
        app:srcCompat="@drawable/ic_photo_camera_black_24dp" />

    <TextView
            android:id="@+id/loadQRHeader"
            android:layout_width="304dp"
            android:layout_height="24dp"
            android:layout_marginTop="140dp"
            android:text="@string/pickQR"
            android:textAlignment="center"
            android:textColor="#969292"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:id="@+id/loadDocumentButton"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:background="@drawable/rounded_button"
            android:text="@string/loadDocument"
            android:textColor="@drawable/rounded_text_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="90dp" app:layout_constraintTop_toBottomOf="@+id/documentSVG"/>
</androidx.constraintlayout.widget.ConstraintLayout>