<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   app:cardElevation="3dp"
                                   app:cardUseCompatPadding="true"
                                   app:cardCornerRadius="4dp">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_ripple"
            android:padding="16dp">
        <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/background"
                android:contentDescription="@string/ListItemDescription"/>
        <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/itemCard"
                android:contentDescription="@string/ListItemDescription"
                android:layout_marginEnd="12dp"
                android:layout_alignEnd="@+id/background" android:layout_marginStart="14dp"
                android:layout_alignStart="@+id/background"
                android:layout_marginBottom="13dp"
                android:layout_alignBottom="@+id/background" android:layout_alignTop="@+id/background"
                android:layout_marginTop="13dp"/>
        <TextView
                android:id="@+id/documentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Line 1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_toEndOf="@id/background"
                android:layout_marginStart="10dp"/>
        <TextView
                android:id="@+id/studentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Line 2"
                android:textSize="15sp"
                android:layout_toEndOf="@id/background"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/documentTitle"/>
    </RelativeLayout>


</androidx.cardview.widget.CardView>